<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ListExcercisListenSum">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:padding="@dimen/margin_bottom_exerice"
            android:textColor="#fff"
            android:layout_margin="@dimen/margin_bottom_exerice"
            android:background="#FF6F00"
            android:text="Cập nhật kết quả."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Reload_SUM"/>
        <Button
            android:padding="@dimen/margin_bottom_exerice"
            android:textColor="#fff"
            android:layout_margin="@dimen/margin_bottom_exerice"
            android:background="#FF6F00"
            android:text="Làm lại bài tập"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_btn_Reload_SUMUpdate"/>
    </LinearLayout>
    <ListView
        android:id="@+id/list_ExerciesListenSum"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></ListView>
</LinearLayout>